
<div class="show-body text-center">

  <h1> <%= @cocktail.name %> </h1>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

  <div class="doses-body">
  <% @cocktail.doses.each do |dose| %>
  <h3> <%= dose.ingredient.name %> </h3>
  <h4> <%= dose.description %> </h3>
    <div class="add-new btn btn-warning">
      <%= link_to "delete", dose_path %>
    </div>
  <% end %>
  <p>------------------------------------</p>
  </div>

  <div class="add-new btn btn-success">
   <%= link_to "back to index", cocktails_path %>
  </div>

  <div class="add-new btn btn-success">
   <%= link_to "add new doses", new_cocktail_dose_path(@cocktail) %>
  </div>

</div>
